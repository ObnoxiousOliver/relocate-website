---
const {
  title,
  country,
  imgSrc,
  href,
  span
} = Astro.props
---

<li style={span && `grid-column: span 2`} class={`attraction ${span  && 'span-2'}`}>
  <a href={href}>
    <div class="attraction__img">
      <img src={imgSrc}>
    </div>
    <div class="attraction__content">
      <h3 class="attraction__title">{title}</h3>
      <h4 class="attraction__country">{country}</h4>
    </div>
  </a>
</li>

<style lang="scss">
.attraction {
  flex: 1 1 auto;

  @media screen and (min-width: 768px) {
    &.span-2 img {
      aspect-ratio: 21/9;
    }
  }

  a {
    display: flex;
    flex-flow: row nowrap;
    background: #0f0f0f;
    border: #222 solid 1px;
    height: 150px;
    border-radius: 10px;
    overflow: hidden;
    color: inherit;
    text-decoration: none;
    transition: box-shadow .3s, background-color .3s, border .3s;
    
    &:hover {
      z-index: 1;
      // transform: scale(1.02);
      border-color: var(--accent);
      background: #222;
      box-shadow: var(--accentA) 0 0 0 5px;

      img {
        transform: scale(1.05);
      }
    }
    
    @media screen and (min-width: 768px) {
      flex-flow: column nowrap;
      height: 100%;
    }
  }


  &__img {
    aspect-ratio: 1.6;
    margin: 4px;
    border-radius: 6px;
    overflow: hidden;
    
    img {
      object-fit: cover;
      width: 100%;
      height: 100%;

      transition: .5s cubic-bezier(0.19, 1, 0.22, 1);
    }
    
    @media screen and (min-width: 768px) {
      width: calc(100% - 8px);
      aspect-ratio: 16/9;
    }
  }

  &__content {
    flex: 1 1 auto;
    display: flex;
    flex-flow: column nowrap;
    padding: 1rem 1rem;
    justify-content: center;
  }

  &__title {
    flex: 0 1 auto;
    margin: 0 0 .5rem 0;
    font-size: 1.5rem;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: .05em;
  }

  &__country {
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: .1em;
    color: var(--accent);
  }
}
</style>